<%- include('header') %>
<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
			<form class="login100-form validate-form" method="POST" action="/saving_user">
				<span class="login100-form-title p-b-55">
					Account Verification
				</span>
        <div class="">
          <h5>
           Please enter the 6-digit verification code we sent via Email:<b><%= email_id %></b>
          </h5>
          <small>Please make sure don't give space,enter otp as it is sent to you!</b>
          </small>
        </div>
				<div class="wrap-input100 validate-input m-b-16" >
					<input class="input100" type="text" name="otp" placeholder="Enter your OTP" required>
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<span class="lnr lnr-envelope"></span>
					</span>
				</div>

				<div class="container-login100-form-btn p-t-25">
					<button class="login100-form-btn">
						Verify
					</button>
				</div>
        <div class="text-center w-full p-t-42 p-b-22">
					<span class="txt1">
					</span>
				</div>
        <a href="/resend_otp" class="btn-face m-b-10">
					<i class="fa fa-repeat"></i>
          Resend OTP
        	</a>
			</form>
		</div>
	</div>
</div>




