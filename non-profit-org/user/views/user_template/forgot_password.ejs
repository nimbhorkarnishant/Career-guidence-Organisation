<%- include('header') %>
<div class="limiter" >
	<div class="container-login100" >
		<div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-200">
			<form class="login100-form validate-form" method="POST" action="/reset_password">
				<span class="login100-form-title p-b-55">
					Forgot Password
					<div class="">
						<i class="fa fa-lock" style="font-size:130px;"></i>
					</div>
				</span>
				<div class="wrap-input100 validate-input m-b-16" data-validate = "Valid email is required: ex@abc.xyz" style="margin-top:-30px;">
						<input class="input100" type="email" name="email" placeholder="Email" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-envelope"></span>
						</span>
					</div>
					<div class="container-login100-form-btn p-t-25">
						<button class="login100-form-btn" type="submit">
              Reset Password
						</button>
					</div>
			</form>
		</div>
	</div>
</div>




