<%- include('../admin_header') %>
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-5">
                <h4 class="page-title">User Detail</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Visit Website</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <!-- Column -->
            <div class="col-lg-4 col-xlg-3 col-md-5">
                <div class="card">
                    <div class="card-body">
                        <center class="m-t-30">
                  					<div class="">
                  						<i class="fa fa-lock" style="font-size:130px;"></i>
                  					</div>
                            <h4 class="card-title m-t-10">Change Password</h4>
                        </center>
                    </div>
                    <div>
                        <hr> </div>

                    <div class="card-body">
                      <form class="form-horizontal form-material" action="/admin_change_password/<%= user[0]._id%>" method="post">
                          <div class="form-group">
                              <label class="col-md-12">Password</label>
                              <div class="col-md-12">
                                  <input type="password" value="" placeholder="Enter New Password" name="pass1"
                                  class="form-control form-control-line" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                  title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                  required>
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-md-12">Repeat Password</label>
                              <div class="col-md-12">
                                  <input type="password" value="" placeholder="Enter New Password" name="pass2"
                                  class="form-control form-control-line" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                  title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                  required>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-sm-12">
                                  <button class="btn btn-success" type="submit" style="background-color:#d33f8d">Change Password</button>
                              </div>
                          </div>
                      </form>

                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material" action="/admin_update_user/<%= user[0]._id%>" method="post">
                            <div class="form-group">
                                <label class="col-md-12">First Name</label>
                                <div class="col-md-12">
                                    <input type="text" value="<%= user[0].first_name%>" name="first_name" placeholder="Johnathan " class="form-control form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Last Name</label>
                                <div class="col-md-12">
                                    <input type="text" value="<%= user[0].last_name%>" name="last_name" placeholder=" Doe" class="form-control form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Email</label>
                                <div class="col-md-12">
                                    <input type="email"value="<%= user[0].email_id%>" name="email_id" placeholder="johnathan@admin.com" class="form-control form-control-line" name="example-email" id="example-email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-12">User Access</label>
                                <div class="col-sm-12">
                                    <select class="form-control form-control-line" name="user_access">
                                      <% if(user[0].user_access=="superadmin") {%>
                                        <option value="superadmin" selected>Super Admin</option>
                                        <option value="admin">Admin</option>
                                        <option value="user" >User</option>
                                      <%} else if (user[0].user_access=="admin") {%>
                                        <option value="superadmin">Super Admin</option>
                                        <option value="admin" selected>Admin</option>
                                        <option value="user" >User</option>
                                      <%} else {%>
                                        <option value="superadmin">Super Admin</option>
                                        <option value="admin">Admin</option>
                                        <option value="user" selected>User</option>
                                      <%}%>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button class="btn btn-success" type="submit" style="background-color:#d33f8d">Update User</button>
                                </div>
                            </div>
                        </form>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <a href="/delete_user/<%=user[0]._id%>">
                                  <button class="btn btn-success" type="submit" style="background-color:#d33f8d">Delete User</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../admin_footer') %>
