<%- include('header') %>
<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-130">
			<form class="login100-form validate-form" method="POST" action="/reset_password_done/<%=token%>/<%=id%>" >
				<span class="login100-form-title p-b-55">
					Password Update
					<div class="">
						<i class="fa fa-lock" style="font-size:130px;"></i>
					</div>
				</span>

					<div class="wrap-input100 validate-input m-b-16">
						<input class="input100" type="password" name="pass1" placeholder="Enter new Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-envelope"></span>
						</span>
					</div>
					<div class="wrap-input100 validate-input m-b-16" >
						<input class="input100" type="password" name="pass2" placeholder="Enter passsword for confirm" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-envelope"></span>
						</span>
					</div>
					<div class="container-login100-form-btn p-t-25">
						<button class="login100-form-btn" type="submit">
             Update Password
						</button>
					</div>
			</form>
		</div>
	</div>
</div>




